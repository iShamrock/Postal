<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffe84e40">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_signup"
            android:layout_below="@+id/signup_title"
            android:layout_alignParentLeft="false"
            android:src="@drawable/signup_button"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:adjustViewBounds="true"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_title"
            android:layout_alignParentLeft="false"
            android:src="@drawable/signup_title"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:layout_marginTop="80dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/signup_username"
            android:background="#ffe4e4e4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentBottom="false"
            android:layout_alignBottom="@+id/signup_title"
            android:layout_marginBottom="145dp"
            android:hint="@string/your_name"
            android:textColor="#66666666"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/signup_signature"
            android:background="#ffe4e4e4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentBottom="false"
            android:layout_alignBottom="@+id/signup_title"
            android:layout_marginBottom="90dp"
            android:hint="@string/phone_or_email"
            android:textColor="#66666666"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/signup_psward"
            android:background="#ffe4e4e4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentBottom="false"
            android:layout_alignBottom="@+id/signup_title"
            android:layout_marginBottom="35dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="#66666666"/>

</RelativeLayout>